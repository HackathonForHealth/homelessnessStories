<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ds_cubed.homelessdescision.Main"
    android:background="@drawable/home_background">

    <ImageButton
        android:src="@drawable/stories_button"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:id="@+id/stories"
        android:onClick="onClickReadStory"
        android:layout_marginTop="175dp"/>

    <ImageButton
        android:src="@drawable/get_help_button"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:id="@+id/getHelp"
        android:onClick="onClickReadStory"
        android:layout_marginTop="30dp"/>

    <ImageButton
        android:src="@drawable/upload_button"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:id="@+id/upload"
        android:onClick="onClickReadStory"
        android:layout_marginTop="30dp"/>
</LinearLayout>

